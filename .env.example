# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_CHUNK_SIZE=1000
EMBEDDING_CHUNK_OVERLAP=100

# Vector Store Configuration
VECTOR_STORE_TYPE=chromadb  # Options: chromadb, faiss
VECTOR_STORE_PATH=./data/vectorstore
COLLECTION_NAME=healthcare_qa

# Application Configuration
APP_NAME=Healthcare Q&A Bot
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Medical Safety Configuration
ENABLE_MEDICAL_DISCLAIMER=True
ENABLE_CONTENT_FILTERING=True
MAX_RESPONSE_LENGTH=2000

# Rate Limiting
MAX_QUERIES_PER_MINUTE=10
MAX_QUERIES_PER_HOUR=100

# Document Processing
MAX_DOCUMENT_SIZE=10485760  # 10MB
SUPPORTED_FORMATS=pdf,docx,txt,pptx,xlsx
